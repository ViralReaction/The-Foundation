<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<!-- Foundation Cap -->
	<ThingDef ParentName="HatMakeableBase">
		<defName>Apparel_SCP_SecurityTaskForceCap</defName>
		<label>Foundation Baseball Cap</label>
		<description>A baseball cap with a stitched on SCP patch, worn by Security Task Force members.</description>
		<graphicData>
			<texPath>Things/Apparel/Headgear/Foundation/SCP_STFCap/SCP_STFCap</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<costStuffCount>25</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<statBases>
			<WorkToMake>1200</WorkToMake>
			<Mass>0.07</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.12</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.40</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>0.8</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<ShootingAccuracyPawn>0.02</ShootingAccuracyPawn>
			<SocialImpact>0.05</SocialImpact>
			<TradePriceImprovement>0.02</TradePriceImprovement>
			<NegotiationAbility>0.02</NegotiationAbility>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Headgear/Foundation/SCP_STFCap/SCP_STFCap</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>Apparel_SCP_STF</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
			<useWornGraphicMask>true</useWornGraphicMask>
		</apparel>
		<tradeTags>
			<li>Apparel_SCP_Hats</li>
		</tradeTags>
	</ThingDef>
	
