<!--========== SCP 2687A Base ============-->
	<ThingDef Abstract="True" Name="SCP2687ABase" ParentName="ResourceBase">
		<description>A polyethylene model of an organ presumed to have originally been manufactured by Prometheus Labs. Adding a small amount of organic material to this causes this.</description>
		<graphicData>
			<texPath>test</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>60</MaxHitPoints>
			<DeteriorationRate>2</DeteriorationRate>
			<Mass>0.1</Mass>
			<Flammability>1</Flammability>
			 <WorkToMake>4000</WorkToMake>
			<MarketValue>100</MarketValue>
		</statBases>
		<recipeMaker>
         <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
         <workSkill>Crafting</workSkill>
         <effectWorking>Smith</effectWorking>
         <recipeUsers>
			<li>CraftingSpot</li>
            <li>DrugLab</li>
         </recipeUsers>
         <skillRequirements>
            <Crafting>5</Crafting>
         </skillRequirements>
		</recipeMaker>
		<costList>
			<Neutroamine>5</Neutroamine>
			<Plasteel>15</Plasteel>
		</costList>
		<stackLimit>20</stackLimit>
		<thingCategories>
			<li>SCP</li>
		</thingCategories>
		<tradeTags>
			<li>SCP</li>
		</tradeTags>
		<techLevel>Ultra</techLevel>
		<burnableByRecipe>false</burnableByRecipe>
		<healthAffectsPrice>false</healthAffectsPrice>
		<minRewardCount>2</minRewardCount>
	</ThingDef>
	
