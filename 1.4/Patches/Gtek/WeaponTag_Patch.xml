<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Gtek's Assorted Weapons Pack (Vanilla Version)</li>
			<li>Gtek's Combat Extended Arsenal</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- Shotguns -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
						defName="HIDGun_M590A1Gun" or
						defName="HIDGun_RemingtonM870Gun" or
						defName="HIDGun_M1014Gun"]/weaponTags
					</xpath>
					<value>
						<li>Foundation_US_ShotGun</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
					defName="HIDGun_SPAS12Gun" or
					defName="HIDGun_AA12Gun"]/weaponTags
					</xpath>
					<value>
						<li>Foundation_GOC_Shotgun</li>
					</value>
				</li>

				<!-- SMG/Carbine -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="HIDGun_vz61Skorpion"]/weaponTags
					</xpath>
					<value>
						<li>Foundation_Combloc_SMG</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="HIDGun_MP5A2Gun"]/weaponTags
					</xpath>
					<value>
						<li>Foundation_US_SMG</li>
					</value>
				</li>

				<!-- AK -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="HIDGun_AK47Kalash"]/weaponTags
					</xpath>
					<value>
						<li>Foundation_Combloc_AK</li>
					</value>
				</li>

				<!-- AR -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
						defName="HIDGun_M4A1C" or
						defName="HIDGun_Mk18C" or
						defName="HIDGun_M27IAR" or
						defName="HIDGun_Mk16SCAR"]/weaponTags
					</xpath>
					<value>
						<li>Foundation_US_AR</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
						defName="HIDGun_XM8C" or
						defName="HIDGun_XM8CQC" or
						defName="HIDGun_Mk17SCAR"]/weaponTags
					</xpath>
					<value>
						<li>Foundation_GOC_AR</li>
					</value>
				</li>

				<!-- DMR -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
						defName="HIDGun_M77Zastava" or
						defName="HIDGun_M76Zastava"]/weaponTags
					</xpath>
					<value>
						<li>Foundation_Combloc_DMR</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
						defName="HIDGun_BarrettMRAD_338Lapua" or
						defName="HIDGun_BarrettMRAD_338Norma" or
						defName="HIDGun_BarrettMRAD_300WinMag"]/weaponTags
					</xpath>
					<value>
						<li>Foundation_US_DMR</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
						defName="HIDGun_MSSR"]/weaponTags					</xpath>
					<value>
						<li>Foundation_GOC_DMR</li>
					</value>
				</li>

				<!-- Handgun -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
						defName="HIDGun_BerettaM9Gun" or
						defName="HIDGun_Beretta92FS"]/weaponTags
					</xpath>
					<value>
						<li>Foundation_US_Pistol</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="HIDGun_CMMGMk57BANSHEE"]/weaponTags					</xpath>
					<value>
						<li>Foundation_GOC_Pistol</li>
					</value>
				</li>

				<!-- Big Irons -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
					defName="HIDBullet_454Casull" or
					defName="HIDGun_RugerSuperRedhawk" or
					defName="HIDGun_TaurusM455Tracker" or
					defName="HIDGun_TaurusRagingBull" or
					defName="HIDGun_TaurusRagingBull_44Mag" or
					defName="HIDGun_ColtPython"
					]/weaponTags
					</xpath>
					<value>
						<li>Foundation_US_BigIron</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
					defName="HIDGun_BarrettM82A1AMR"]/weaponTags</xpath>
					<value>
						<li>Foundation_US_AntiMaterial</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Gtek's Combat Extended Arsenal</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="HIDGun_Mk16SCAR_UGL"]/weaponTags
					</xpath>
					<value>
						<li>Foundation_US_AR</li>
						<li>Foundation_GOC_AR</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>