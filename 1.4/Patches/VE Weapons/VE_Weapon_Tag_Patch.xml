<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Weapons Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
	
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="VWE_Gun_Flamethrower"]/weaponTags</xpath>
					<value>
						<li>Foundation_Flamethrower</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="VWE_Gun_MarksmanRifle"]/weaponTags</xpath>
					<value>
						<li>Foundation_Combloc_DMR</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="VWE_Gun_ServiceRifle"]/weaponTags</xpath>
					<value>
						<li>Foundation_Combloc_AK</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="VWE_Gun_BattleRifle"]/weaponTags</xpath>
					<value>
						<li>Foundation_US_AR</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="VWE_Gun_GrenadeLauncher"]/weaponTags</xpath>
					<value>
						<li>Foundation_Combloc_Explosive</li>
						<li>Foundation_US_Explosive</li>
						<li>Foundation_GOC_Explosive</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
					defName="VWE_Gun_ChargeShotgun" or
					defName="VWE_Gun_ChargeLMG"]/weaponTags
					</xpath>
					<value>
						<li>Foundation_Combloc_Elite_Spacer</li>
						<li>Foundation_US_Elite_Spacer</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
					defName="VWE_Gun_ChargeMinigun" or
					defName="VWE_Gun_ChargeRocketLauncher"]/weaponTags
					</xpath>
					<value>
						<li>Foundation_US_Elite_Spacer</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="VWE_Gun_AntiMaterialRifle"]/weaponTags</xpath>
					<value>
						<li>Foundation_US_AntiMaterial</li>
					</value>
				</li>			

			</operations>
		</match>
	</Operation>

</Patch>