<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- SCP-106 Corrosive Ooze -->
	<HediffDef>
		<defName>Foundation_106_Ooze_Hediff</defName>
		<label>SCP-106 ooze</label>
		<description>A black, mucus-like substance that has corrosive effects.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>0.05</initialSeverity>
		<lethalSeverity>1.2</lethalSeverity>
		<makesSickThought>true</makesSickThought>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>45000~100000</disappearsAfterTicks>
			</li>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.75</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
				<becomeVisible>true</becomeVisible>
			</li>
			<li>
				<minSeverity>0.15</minSeverity>
				<label>minor</label>
				<capMods>
				  <li>
					<capacity>Manipulation</capacity>
					<offset>-0.3</offset>
				  </li>
				  <li>
					<capacity>Moving</capacity>
					<offset>-0.3</offset>
				  </li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.30</minSeverity>
				<label>moderate</label>
				<capMods>
				  <li>
					<capacity>Manipulation</capacity>
					<offset>-0.45</offset>
				  </li>
				  <li>
					<capacity>Moving</capacity>
					<offset>-0.45</offset>
				  </li>
				</capMods>				
			</li>
			<li>
				<minSeverity>0.60</minSeverity>
				<label>severe</label>
				<capMods>
				  <li>
					<capacity>Manipulation</capacity>
					<offset>-0.6</offset>
				  </li>
				  <li>
					<capacity>Moving</capacity>
					<offset>-0.6</offset>
				  </li>
				</capMods>				
			</li>
		</stages>
	</HediffDef>

	<!-- SCP-939 Amnesic Breath -->
	<HediffDef ParentName="DiseaseBase">
		<defName>Foundation_939_Breath_Hediff</defName>
		<label>SCP-939 breath</label>
		<description>An amnesia-inducing substance exhaled from SCP-939.
	\nNaturally recovers over time as the body filters it out.</description>
		<initialSeverity>0.15</initialSeverity>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>45000~100000</disappearsAfterTicks>
			</li>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.75</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<minSeverity>0.15</minSeverity>
				<label>moderate</label>
			</li>
			<li>
				<minSeverity>0.30</minSeverity>
				<label>severe</label>
			</li>
		</stages>
	</HediffDef>
	
	<!-- SCP 2845 Aura -->
	<HediffDef ParentName="DiseaseBase">
		<defName>Foundation_2845_Transmute_Hediff</defName>
		<label>SCP-2845 Transmutation Aura</label>
		<description>This pawn is under the effect of SCP-2845's transmutation aura, fatally transforming them into an SCP-2845-1 instance.
\nNaturally recovers over time as the body filters it out.</description>
		<initialSeverity>0.15</initialSeverity>
		<lethalSeverity>1</lethalSeverity>
		<makesSickThought>true</makesSickThought>

		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-1</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<minSeverity>0.15</minSeverity>
				<label>initial</label>
			</li>
			<li>
				<minSeverity>0.30</minSeverity>
				<label>moderate</label>
				<lifeThreatening>true</lifeThreatening>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.2</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.50</minSeverity>
				<label>severe</label>
				<lifeThreatening>true</lifeThreatening>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.4</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

</Defs>